// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  schedules Schedule[]

  @@map("users")
}

model Schedule {
  id              Int      @id @default(autoincrement())
  userId          Int
  startTime       DateTime
  endTime         DateTime
  maxReservations Int      @default(3)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user                User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  reservations        Reservation[]
  accessTokenSchedules AccessTokenSchedule[]

  @@index([userId])
  @@index([startTime])
  @@map("schedules")
}

model Reservation {
  id            Int      @id @default(autoincrement())
  scheduleId    Int
  applicantName String
  applicantEmail String
  status        String   @default("confirmed")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  schedule           Schedule           @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  consultationRecord ConsultationRecord?

  @@index([scheduleId])
  @@map("reservations")
}

model ConsultationRecord {
  id            Int      @id @default(autoincrement())
  reservationId Int      @unique
  content       String   @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  reservation Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)

  @@map("consultation_records")
}

model AccessToken {
  id             Int      @id @default(autoincrement())
  token          String   @unique
  recipientEmail String?  // 상담희망자 이메일
  expiresAt      DateTime
  used           Boolean  @default(false)
  createdAt      DateTime @default(now())

  schedules AccessTokenSchedule[]

  @@index([token])
  @@map("access_tokens")
}

model AccessTokenSchedule {
  id            Int      @id @default(autoincrement())
  accessTokenId Int
  scheduleId    Int
  createdAt     DateTime @default(now())

  accessToken AccessToken @relation(fields: [accessTokenId], references: [id], onDelete: Cascade)
  schedule    Schedule    @relation(fields: [scheduleId], references: [id], onDelete: Cascade)

  @@unique([accessTokenId, scheduleId])
  @@index([accessTokenId])
  @@index([scheduleId])
  @@map("access_token_schedules")
}
