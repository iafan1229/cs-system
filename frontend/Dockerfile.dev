FROM node:20-alpine

WORKDIR /app

# package.json만 먼저 복사하여 의존성 설치 (캐시 최적화)
COPY package*.json ./
RUN npm install

# 나머지 파일 복사
COPY . .

EXPOSE 5173

# entrypoint 스크립트 생성 및 실행
RUN echo '#!/bin/sh' > /entrypoint.sh && \
    echo 'set -e' >> /entrypoint.sh && \
    echo 'cd /app' >> /entrypoint.sh && \
    echo 'echo "Installing dependencies..."' >> /entrypoint.sh && \
    echo 'npm install' >> /entrypoint.sh && \
    echo 'echo "Starting dev server..."' >> /entrypoint.sh && \
    echo 'exec npm run dev -- --host' >> /entrypoint.sh && \
    chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]